#version 330 core
in vec3 normal;
in vec3 fragPos;

out vec4 FragColor;

uniform vec3 color;
uniform vec3 lightPos;

void main()
{
    vec3 norm = normalize(normal);
    vec3 lightDir = normalize(lightPos - fragPos);
    float diff = max(dot(norm, lightDir), 0.0);
    FragColor = vec4((diff + 0.4) * color, 1.0f);
} 